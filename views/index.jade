extends layout

block content
  input#trafficCameraCheckbox(type='checkbox', name='trafficCamera',onclick="toggleMarkers('Traffic camera')",checked=true) 
  | Traffic camera data
  input#inRoadMeasurementCheckbox(type='checkbox', name='inRoadMeasurement', onclick='toggleMarkers("In-road measurement")',checked=true)
  | In-road Measurement data
  input#mobilePhoneCheckbox(type='checkbox', name='mobilePhone', onclick='toggleMarkers("Mobile data")',checked=true)
  | Mobile phone data
  input#connectedCarsCheckbox(type='checkbox', name='connectedCars', onclick='toggleMarkers("Connected car")',checked=true)
  | Connected car data
  div#map(style='height: 1200px;width: 1200px')

block debug 
  input#debugButton(type="button",name="irdebugButton",onclick="loadData('In-road measurement')",value="inroad")
  input#debugButton(type="button",name="tcdebugButton",onclick="loadData('Traffic camera')",value="trafficcam")
  input#debugButton(type="button",name="mddebugButton",onclick="loadData('Mobile data')",value="mobiledata")
  input#debugButton(type="button",name="ccdebugButton",onclick="loadData('Connected car')",value="connectedcar")


